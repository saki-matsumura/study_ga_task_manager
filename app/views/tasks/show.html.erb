<h1>タスク詳細</h1>
<p>完了チェック：<%= @task.done %></p>
<p>タイトル：<%= @task.title %></p>
<p>メモ：<%= @task.note %></p>
<p>納期：<%= @task.deadline_on %></p>
<%#binding.pry%>
<p>取引先：<%= @task.client&.name %></p>
<% @working_processes.each do |process| %>
  <p>工程：<%= process.type_of_task&.name %></p>
  <p>作業量：<%= process.workload %></p>
  <p>作業時間：<%= process.working_hour %><%= process.unit %></p>
<% end %>

<% if @task.image.url %>
<p><%= @task.image.url %></p>
<p><%= image_tag @task.image.url, class: 'image_size_default' %></p>
<% end %>

<% if @bookmark.present? %>
    <%= link_to 'お気に入り解除する', bookmark_path(id: @bookmark.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', bookmarks_path(task_id: @task.id), method: :post, class: 'btn btn-primary' %>
<% end %>
<p>
<%= link_to "編集", edit_task_path %> | <%= link_to "戻る", tasks_path %>
</p>