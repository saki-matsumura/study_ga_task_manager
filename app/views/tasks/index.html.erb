<h1>タスク一覧</h1>

<%= link_to "お気に入り", tasks_path(bookmarks: "true") %>
<%= link_to '新規作成', new_task_path %>

<ul>
  <% @tasks.each do | task | %>
    <li>
      <%= link_to task.title, task_path(task.id), class: "btn btn-outline-primary" %>
      <%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除してよろしですか？'}, class: "btn btn-outline-danger" %>
    </li>
  <% end %>
</ul>