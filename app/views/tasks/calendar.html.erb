<h1>タスクカレンダー</h1>

<!-- メニュー -->
<div class="openbtn1"><span></span><span></span><span></span></div>
<nav id="g-nav">
  <div id="g-nav-list"><!--ナビの数が増えた場合縦スクロールするためのdiv※不要なら削除-->
    <ul>
      <li><%= link_to "作業工程", type_of_tasks_path, bookmark:"true"%></li>
      <li><%= link_to "取引先", clients_path, bookmark:"true"%></li>
      <li><%= link_to "ブックマーク", tasks_path, bookmark:"true"%></li>
      <li><%= link_to "タスク一覧", tasks_path %></li>
      <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: "text-danger" %></li>
    </ul>
  </div>
</nav>

<%= link_to '新規作成', new_task_path %>

<div class="col-md-8">
<%= month_calendar events: @tasks do |date, tasks| %>
  <%= date.day %>

  <% tasks.each do |task| %>
    <div>
      <%= link_to task.title, task %>
    </div>
  <% end %>
<% end %>

